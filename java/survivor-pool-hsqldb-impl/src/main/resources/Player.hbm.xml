<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="github.jschmidt10.survivor.api">
    <class name="Player" table="PLAYER">
        <id name="name" type="string" column="name"/>
        <set name="contestants"
             table="PLAYER_CONTESTANTS"
             fetch="select"
             cascade="all">
            <key column="player_name"/>
            <many-to-many class="Contestant" column="contestant_name"/>
        </set>
    </class>
</hibernate-mapping>