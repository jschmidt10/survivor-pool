<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="github.jschmidt10.survivor.api">
    <class name="Season" table="SEASON">
        <id name="name" type="string" column="name"/>
        <property name="current" type="boolean" column="is_current"/>
        <set name="contestants"
             table="SEASON_CONTESTANTS"
             fetch="select"
             cascade="all">
            <key column="season_name"/>
            <many-to-many column="contestant_name" class="Contestant"/>
        </set>
    </class>
</hibernate-mapping>