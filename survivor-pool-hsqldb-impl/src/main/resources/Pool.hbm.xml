<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="github.jschmidt10.survivor.api">
    <class name="Pool" table="POOL">
        <id name="name" type="string" column="name"/>
        <property name="url" column="url" type="string"/>
        <set name="players"
             table="POOL_PLAYERS"
             fetch="select"
             cascade="all">
            <key column="pool_name"/>
            <many-to-many column="player_name" class="Player"/>
        </set>
    </class>
</hibernate-mapping>